<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.durdenp.com.buswayt.app.durdenp.com.buswayt.bus.BusConfigActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Bus"
        android:id="@+id/textView2"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linea"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/busIdEditText"
        android:width="100dp"
        android:singleLine="false"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/saveCheckBox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LineaIdEditText2"
        android:width="100dp"
        android:layout_above="@+id/saveCheckBox"
        android:layout_alignEnd="@+id/saveCheckBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salva Preferenze"
        android:id="@+id/saveCheckBox"
        android:layout_marginTop="40dp"
        android:checked="false"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Bus Localization Service"
        android:id="@+id/button3"
        android:layout_centerVertical="true"
        android:onClick="startLocalizationService"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
